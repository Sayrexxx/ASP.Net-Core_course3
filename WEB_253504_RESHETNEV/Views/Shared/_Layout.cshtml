<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/WebLabs_BSUIR_V253504.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div class="container">
        <!-- Панель навигации -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <!-- Меню сайта -->
            <partial name="_MenuPartial"/>
            <!-- Меню сайта - конец -->
            <!-- Информация пользователя -->
            
            <partial name="_UserInfoPartial"/>
            
            <!-- Информация пользователя - конец -->
        </nav> <!-- Панель навигации - конец -->
        <span class="nav-color">@* Заголовок страницы *@</span>
    </div>
</header>


@RenderBody()


<footer>
    <div class="icon-container">
        <a class="nav-item nav-link" href="http://www.facebook.com">
            <i class="fa-brands fa-facebook-f fa-2x" style="color: gray;"></i>
        </a>
        <a class="nav-item nav-link" href="http://www.vk.com">
            <i class="fa-brands fa-vk fa-2x" style="color: gray;"></i>
        </a>
        <a class="nav-item nav-link" href="http://www.twitter.com">
            <i class="fa-brands fa-twitter fa-2x" style="color: gray;"></i>
        </a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script async>
    

</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>